<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ISEN.MSH.Nhibernate.Models" namespace="ISEN.MSH.Nhibernate.Models.WorkFlow">

	<class name="BaseFlow" table="T_BaseFlow">
		<cache usage="read-write"/>
		<id name="ID" type="Guid">
			<column name="BaseFlowID" index="PK_BaseFlow"/>
			<generator class="assigned" />
		</id>

		<!--名称-->
		<property name="Name" type="string">
			<column name="Name" length="50" not-null="true"/>
		</property>

		<!--内容-->
		<property name="Content" type="string">
			<column name="Content" length="500" not-null="true"/>
		</property>

		<!--建立时间-->
		<property name="CreateTime" type="DateTime">
			<column name="CreateTime" not-null="true"/>
		</property>
		
		<!--流程节点列表-->
		<bag name="BaseFlowVertexList" generic="true" inverse="true" cascade="all-delete-orphan" table="T_BaseFlowVertex">
			<key column="BaseFlowID" foreign-key="FK_BaseFlowVertex_BaseFlow"/>
			<one-to-many class="BaseFlowVertex"/>
		</bag>

		<!--流程条件列表-->
		<bag name="BaseFlowRequirementList" generic="true" inverse="true" cascade="all-delete-orphan" table="T_BaseFlowRequirement">
			<key column="BaseFlowID" foreign-key="FK_BaseFlowRequirement_BaseFlow"/>
			<one-to-many class="BaseFlowRequirement"/>
		</bag>

	</class>

</hibernate-mapping>