<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ISEN.MSH.Nhibernate.Models" namespace="ISEN.MSH.Nhibernate.Models.WorkFlow">

	<class name="BaseFlowArc" table="T_BaseFlowArc">
		<id name="ID" type="Guid">
			<column name="BaseFlowArcID" index="PK_BaseFlowArc"/>
			<generator class="assigned" />
		</id>

		<!--建立日期-->
		<property name="CreateDate" type="DateTime">
			<column name="CreateDate" not-null="true"/>
		</property>

		<!--流程分支条件-->
		<property name="Info" type="string">
			<column name="Info" length="200" />
		</property>
		
		<!--流程分支条件描述-->
		<!--<property name="Describe" type="string">
			<column name="Describe" length="200" />
		</property>-->

		<!--流程分支条件值-->
		<!--<property name="Value" type="bool">
			<column name="Value" />
		</property>-->
		
		<!--流程头节点-->
		<many-to-one name="HeadVertex" column="HeadVertexID" class="BaseFlowVertex" not-null="true"
                      cascade="save-update" foreign-key="FK_BaseFlowArc_BaseFlowVertex"/>

		<!--流程尾节点-->
		<many-to-one name="TailVertex" column="TailVertexID" class="BaseFlowVertex" not-null="true"
                      cascade="save-update" foreign-key="FK_BaseFlowArc_BaseFlowVertex"/>

	</class>

</hibernate-mapping>