<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ISEN.MSH.Nhibernate.Models" namespace="ISEN.MSH.Nhibernate.Models.WorkFlow">

	<class name="BaseFlowVertex" table="T_BaseFlowVertex">
		<id name="ID" type="Guid">
			<column name="BaseFlowVertexID" index="PK_BaseFlowVertex"/>
			<generator class="assigned" />
		</id>

		<!--当前节点名称-->
		<property name="Name" type="string">
			<column name="Name" length="50" not-null="true"/>
		</property>
		
		<!--当前节点主要功能描述-->
		<property name="Content" type="string">
			<column name="Content" length="500" not-null="true"/>
		</property>
		
		<!--当前节点呈现地址-->
		<property name="ActionURL" type="string">
			<column name="ActionURL" length="50" not-null="true"/>
		</property>

		<!--当前节点类型-->
		<property name="Type" type="string">
			<column name="Type" length="20" not-null="true"/>
		</property>

		<!--建立日期-->
		<property name="CreateDate" type="DateTime">
			<column name="CreateDate" not-null="true"/>
		</property>

		<!--流程标识-->
		<many-to-one name="BaseFlow" column="BaseFlowID" class="BaseFlow" not-null="true"
                  foreign-key="FK_BaseFlowVertex_BaseFlow"/>

		<bag name="InConditionList" generic="true" inverse="true" cascade="all-delete-orphan" table="T_BaseFlowArc">
			<key column="HeadArc" foreign-key="FK_BaseFlowArc_BaseFlowVertex"/>
			<one-to-many class="BaseFlowArc"/>
		</bag>

		<bag name="OutConditionList" generic="true" inverse="true" cascade="all-delete-orphan" table="T_BaseFlowArc">
			<key column="TailArc" foreign-key="FK_BaseFlowArc_BaseFlowVertex"/>
			<one-to-many class="BaseFlowArc"/>
		</bag>

	</class>

</hibernate-mapping>